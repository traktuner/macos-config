{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "before 6am on monday"
  ],
  "timezone": "Europe/Berlin",
  "packageRules": [
    {
      "matchPackageNames": [
        "homebrew"
      ],
      "enabled": false
    },
    {
      "groupName": "Homebrew packages",
      "groupSlug": "homebrew",
      "matchPackageNames": [
        "/^brew /"
      ]
    },
    {
      "groupName": "Homebrew casks",
      "groupSlug": "homebrew-casks",
      "matchPackageNames": [
        "/^cask /"
      ]
    },
    {
      "groupName": "Mac App Store apps",
      "groupSlug": "mas-apps",
      "matchPackageNames": [
        "/^mas /"
      ]
    }
  ],
  "commitMessagePrefix": "chore(deps):",
  "commitMessageAction": "update",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "to {{newVersion}}",
  "labels": [
    "dependencies",
    "automated"
  ],
  "assignees": [
    "@traktuner"
  ],
  "reviewers": [
    "@traktuner"
  ],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5
}
